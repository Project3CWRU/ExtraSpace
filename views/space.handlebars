<div class="text-center spaceTitle">
	<h1 class="desTitle" style="margin-top: 70px">{{user.space.address}} {{user.space.city}}, {{user.space.state}} {{user.space.zipcode}}</h1>
	{{#if user.space.status}}
		<h1 class="text-success">Space Is Available!</h1>
	{{else}}
		<h1 class="text-danger">Sorry Space is Unvailable</h1>
	{{/if}}
</div>
